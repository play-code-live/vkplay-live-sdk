{
    "name": "play-code-live/vkplay-live-sdk",
    "description": "Access VKPlayLive API easily with PHP SDK",
    "keywords": [
        "api",
        "streaming",
        "sdk",
        "vkplay",
        "vkplaylive"
    ],
    "license": "MIT",
    "type": "library",
    "autoload": {
        "psr-4": {
            "PlayCode\\VKPlayLiveSDK\\": "src/"
        },
        "exclude-from-classmap": [
            "tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "PlayCode\\Tests\\VKPlayLiveSDK\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Elijah Zobenko",
            "email": "info@play-code.ru"
        }
    ],
    "require": {
        "php": ">=8.1.2",
        "guzzlehttp/guzzle": "^7.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "scripts": {
        "test": "vendor/bin/phpunit --log-junit reports/unitreport.xml --coverage-clover reports/clover.xml tests/"
    }
}
